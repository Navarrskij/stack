<div class='question'>
<div id='question_<%= @question.id %>'>
<p>
  <strong>Title:</strong>
  <%= @question.title %>
</p>
<p>
  <strong>Text:</strong>
  <%= @question.body %>
</p>
  <% if current_user && current_user.author_of?(@question) %>
    <td><%= link_to 'Delete', question_path(@question), method: :delete %></td>
    <td><%= link_to 'Edit', edit_question_path(@question), remote: true %></td>
  <% end %>
  </div>
  </div>
  <div class='answers'>
<%= render @question.answers %>
</div>




<h1>Listing questions</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
  </tr>
  <% @questions.each do |question| %>
    <tr>
      <td><%= question.title %></td>
      <td><%= question.body %></td>
      <td><%= link_to 'Show', question_path(question) %></td>
  <% if current_user && current_user.author_of?(question) %>
      <td><%= link_to 'Delete', question_path(question), method: :delete %></td>
  <% end %>
    </tr>
  <% end %>
</table>
<%= link_to 'ask question', new_question_path %>


<%= errors_for(@question) %>
<%= form_for :question, url: questions_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
   <p>
    Attachment files:
  </p>
  <p>
    <%= f.fields_for :attachments do |a| %>
      <%= a.label :file %>
      <%= a.file_field :file %>
    <% end %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

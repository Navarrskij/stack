<p>
  <strong>Title:</strong>
  <%= @question.title %>
</p>
<p>
  <strong>Text:</strong>
  <%= @question.body %>
</p>
  <% if current_user && current_user.author_of?(@question) %>
    <td><%= link_to 'Delete', question_path(@question), method: :delete %></td>
  <% end %>
  <div class='answers'>
<%= render @question.answers %>
</div>

<h2>Add a Answer:</h2>
<%= form_for([@question, @question.answers.build], remote: true) do |f| %>
  <%= errors_for(@answer) %>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to 'Edit', edit_question_path(@question) %> |
<%= link_to 'Back', questions_path %>



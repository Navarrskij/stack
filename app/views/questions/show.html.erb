<div class='question'>
<div id='question_<%= @question.id %>'>
<p>
  <strong>Title:</strong>
  <%= @question.title %>
</p>
<p>
  <strong>Text:</strong>
  <%= @question.body %>
</p>
<p>
  <strong>Attachments:</strong>
  <% @question.attachments.each do |a| %>
    <div id='attachment_<%= a.id %>'>
      <%= link_to a.file.identifier, a.file.url %>
      <% if current_user && current_user.author_of?(a.attachmentable) %>
      <%= link_to 'del', attachment_path(a), method: :delete, remote: true %>
    </div>
      <% end %>
  <% end %>
</p>
  <% if current_user && current_user.author_of?(@question) %>
    <td><%= link_to 'Delete', question_path(@question), method: :delete %></td>
    <td><%= link_to 'Edit', edit_question_path(@question), remote: true %></td><br>
  <% end %>

<div class='q_rating'>
  <% if user_signed_in? %>
  <%= link_to 'vote up', vote_up_question_path(@question), method: :patch, remote: true, data: { type: :json} %><br>
  <div class="value">
    <%= @question.rating %><br>
  </div>
  <%= link_to 'vote down', vote_down_question_path(@question), method: :patch, remote: true, data: { type: :json} %><br>
  <div class="vote-erorr">
  </div>
</div>
<% end %>
  </div>
</div>
<div class='answers'>
  <%= render @question.answers %>
</div>
<%= render partial: 'form_answer' %>

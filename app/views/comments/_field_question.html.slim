.hidden id="comments_form_for_#{commentable.class}_#{commentable.id}"
 	= form_for [commentable, Comment.new], remote: true do |f| 
    	= errors_for @comment
    	.field
    		= f.hidden_field :commentable_type, value: commentable.class.to_s
      	= f.label :body
      	.comment-errors
      	= f.text_area :body 
      	= f.submit "Create Comment"